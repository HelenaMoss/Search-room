header.header
	//- Оболочка шапки_нужна для фиксирования шапки на странице 
	div.header__wrapper
		//- Ограничивающий контейнер + отступы безопасности
		div.header__container._container
			//- Тело шапки
			div.header__body
				//- Оболочка для логотипа и меню
				div.header__main
					//- Логотип 
					div.header__logo
						a.header__logo(href="#")  
					//- Меню
					div.header__menu.menu
						nav.menu__body
							ul.menu__list
								li.menu__item
									a.menu__link(href="#") О нас
								li.menu__item
									a.menu__link(href="#") Услуги
									//- Выпадающее меню в разделе "Услуги"
									button.menu__arrow._icon-arrow_down(data-spoller, type="button")
									ul.menu__sub-list
										li.menu__sub-item
											a.menu__sub-link(href="#") Услуга 1
										li.menu__sub-item
											a.menu__sub-link(href="#") Услуга 2
										li.menu__sub-item
											a.menu__sub-link(href="#") Услуга 3
								li.menu__item
									a.menu__link(href="#") Вакансии
								li.menu__item
									a.menu__link(href="#") Новости
								li.menu__item
									a.menu__link(href="#") Соглашения
									//- Выпадающее меню в разделе "Соглашения"
									button.menu__arrow._icon-arrow_down(data-spoller, type="button")
									ul.menu__sub-list
										li.menu__sub-item
											a.menu__sub-link(href="#") Соглашение 1
										li.menu__sub-item
											a.menu__sub-link(href="#") Соглашение 2
										li.menu__sub-item
											a.menu__sub-link(href="#") Соглашение 3
				//- Меню-бургер
				// button.icon-menu(type="button")
							span О нас
							span Услуги
							span Вакансии
							span Новости
							span Соглашения 

				//- Авторизация на сайте
				div.header__authorization
					//- Войти
					div.header__entrance
						a.header__entrance-link(href="#") Войти
					//- Регистрация
					div.header__registration
						a.header__registration-link(href="#") Регистрация