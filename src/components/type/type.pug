- let tag = ['H1', 'H2', 'H3', 'Body'];
- let type = ['This one is the sub-section or widget title', 'Next one is the item title inside widgets', 'This is a label or CTA text', 'This is the body text which is used for most of the design, like paragraphs, lists, etc.'];

div.container-type
  .tags
    each valueTag in tag 
      div(class = `tags__${valueTag}`)=valueTag
  .type
    - let i = 1;
    each valueType in type 
      div(class = `type__${i++}`)=valueType