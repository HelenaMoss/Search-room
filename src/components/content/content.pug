div.content
	//- Обертка для Блока поиска номеров
	div.content__search-room-container.search-room-container
		//- Блок поиска номеров
		div.content__search-room
			p.content__text Найдём номера под ваши пожелания
			//- Форма поиска номеров
			form.content__form(action="#", metod="get")
				div.content__container-arrivel
					p.content__button-title-arrivel Прибытие
					//- Элемент формы "Прибытие"
					input.content__button-arrivel#img-form(type="date", name="arrivel", required, pattern="[0-9]{2}.[0-9]{2}.[0-9]{4}", title="ДД.ММ.ГГГГ, например: 02.12.2005")
				div.content__container-departure
					p.content__button-title-departure Выезд
					//- Элемент формы "Выезд"
					input.content__button-departure#img-form(type="date", name="departure", required, pattern="[0-9]{2}.[0-9]{2}.[0-9]{4}", title="ДД.ММ.ГГГГ, например: 02.12.2005")
				div.content__container-guests
					p.content__button-title-guests Гости
					//- Элемент формы "Гости"
					select.content__button-guests#img-form(name="guests")
						option.content__button-guests-how-many(value="how-many") Сколько гостей
						option.content__button-guests-adults(value="adults") Взрослые
						option.content__button-guests-children(value="children") Дети
						option.content__button-guests-infants(value="infants") Младенцы
						option.content__button-guests-clear(value="clear") Очистить
					//- Кнопка подтверждения
				button.content__button-pick-up-number#img-pick-up-number(type="submit", value="Подобрать номер") 
					p.content__button-text Подобрать номер
					img.content__button-img(src="arrow_forwardwhite.svg")